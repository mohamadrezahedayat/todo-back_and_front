{
  "compilerOptions": {
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",   
    "target": "es2016",                             
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "strict": true,                                      
    "noImplicitAny": true,                            
    "strictPropertyInitialization": false,             
    "noUnusedLocals": true,                           
    "noImplicitReturns": true,                        
    "skipLibCheck": true                                 
  }
}
